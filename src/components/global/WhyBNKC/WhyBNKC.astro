---
let features = [
	"Professional Course",
	"Research Center",
	"Internship",
	"Collaboration",
	"Publication",
	"Library",
	"Seminar",
	"Extra Curricular Activities"
]
---

<div class="flex w-11/12 mx-auto  gap-2 flex-wrap">
	{
		features.map((feature) => (
			<div class="card w-1/3 flex-auto mt-3 lg:card-side bg-base-100 shadow-xl">
				<figure>
					<img
						class="h-24 w-full object-cover"
						src="https://daisyui.com/images/stock/photo-1635805737707-575885ab0820.jpg"
						alt="Album"
					/>
				</figure>
				<div class="card-body p-1">
					<h2 class="card-title text-base">{feature}</h2>
					<p class="text-sm">Click the button to listen on Spotiwhy app.</p>
					<div class="card-actions justify-end">
						<button class="btn btn-sm btn-primary">Listen</button>
					</div>
				</div>
			</div>
		))
	}
</div>
